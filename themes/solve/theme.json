{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0066ff",
                    "name": "Primary"
                },
                {
                    "slug": "background",
                    "color": "#f5f5f5",
                    "name": "Background"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ]
        },
        "typography": {
            "fontSizes": [
                {
                    "slug": "normal",
                    "size": "16px",
                    "name": "Normal"
                },
                {
                    "slug": "medium",
                    "size": "20px",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "24px",
                    "name": "Large"
                },
                {
                    "slug": "huge",
                    "size": "48px",
                    "name": "Huge"
                }
            ]
        },
        "spacing": {
            "units": [ "px", "em", "rem", "vh", "vw", "%" ],
            "padding": true,
            "margin": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--black)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "1.5"
        }
    },
    "templateParts": [
        {
            "name": "header",
            "area": "header"
        },
        {
            "name": "footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "homepage",
            "title": "Homepage with Search",
            "postTypes": ["page"]
        }
    ]
}